{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "es2019"
    ]
  },
  "exclude": [
    "node_modules",
    ".vscode"
  ],
  "include": [
    "src",
    "examples"
  ]
}